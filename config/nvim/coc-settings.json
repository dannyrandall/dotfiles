{
	"suggest.maxCompleteItemCount": 10,
	"suggest.enablePreview": true,
	"diagnostic.checkCurrentLine": true,
	"diagnostic.maxWindowHeight": 5,
	"codeLens.enable": true,
	"list.height": 10,
	"list.insertMappings": {},
	"list.normalMappings": {
		"v": "action:vsplit",
		"s": "action:split"
	},
	"coc.preferences.formatOnSaveFiletypes": [
		"*"
	],
	// spell checker
	"cSpell.maxNumberOfProblems": 3,
	"cSpell.showStatus": false,
	"cSpell.minWordLength": 5,
	"cSpell.allowCompoundWords": true,
	"cSpell.spellCheckDelayMs": 10000,
	"cSpell.flagWords": [
		"hte" // the
	],
