{
	"suggest.maxCompleteItemCount": 10,
	"suggest.enablePreview": true,
	"diagnostic.checkCurrentLine": true,
	"codeLens.enable": true,
	"coc.preferences.formatOnSaveFiletypes": [
		"*"
	],
	// spell checker
	"cSpell.maxNumberOfProblems": 10,
	"cSpell.showStatus": false,
	"cSpell.words": [
		"kubernetes",
		"statefulset",
		"byuoitav",
		"structs",
		"unblank",
		"debugf",
		"infof",
		"warnf",
		"pflag",
		"upsert"
	],
	// yaml
	"yaml.format.enable": true,
	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	},
	// typescript & javascript
	"tsserver.formatOnType": true,
	"typescript.preferences.quoteStyle": "double",
	"typescript.format.enabled": true,
	"javascript.preferences.quoteStyle": "double",
	"javascript.format.enabled": true,
	// html
	"html.format.enable": true,
	"html.validate.scripts": true,
	"html.validate.styles": true,
	"html.autoClosingTags": true,
	"html.suggest.html5": true,
	"languageserver": {
		// go
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"disableWorkspaceFolders": true,
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"usePlaceholders": true,
				"completeUnimported": true,
				"staticcheck": true
			}
		},
		// terraform
		"terraform": {
			"command": "terraform-lsp",
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {}
		},
		// julia
		"julia": {
			"filetypes": [
				"julia"
			],
			"command": "/usr/bin/julia",
			"args": [
				"--startup-file=no",
				"--history-file=no",
				"-e",
				"using LanguageServer;\n using Pkg;\n import StaticLint;\n import SymbolServer;\n env_path = dirname(Pkg.Types.Context().env.project_file);\n debug = false;\n server = LanguageServer.LanguageServerInstance(stdin, stdout, debug, env_path, \"\", Dict());\n server.runlinter = true;\n run(server);"
			]
		}
	}
}
